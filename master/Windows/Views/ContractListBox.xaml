                                </StackPanel>
                            </StackPanel>
                        </StackPanel>-->
                    </Expander>
                </Border>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm_blocks:VMlog}">
                <Border Style="{StaticResource MyBorder}">
                    <Expander Header="{Binding Name}" IsExpanded="True">
                        <TextBox AcceptsReturn="True" Margin="5,5,5,5" Text="{Binding Text}">
                            
                        </TextBox>
                    </Expander>
                </Border>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm_blocks:VMif}">
                <Border Style="{StaticResource MyBorder}">
                    <Expander Header="{Binding Name}" IsExpanded="True">
                        <StackPanel Margin="5,5,5,5">
                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding Condition.CommandAddCondition}" Margin="0,0,5,0">
                                    <Image Source="..\Images\add_green.png" Width="16" Height="16"/>
                                </Button>
                                <TextBlock Text="Conditions:"/>
                            </StackPanel>
                            <ItemsControl HorizontalContentAlignment="Stretch" ItemsSource="{Binding Condition.Conditions}">
                                <ItemsControl.Resources>
                                    <DataTemplate DataType="{x:Type vm_condition:VMconditionBase}">
                                        <StackPanel Orientation="Horizontal">
                                            <Button Command="{Binding CommandRemove}" CommandParameter="{Binding}"  Margin="0,0,5,0">
                                                <Image Source="..\Images\cross_red.png" Width="16" Height="16"/>
                                            </Button>
                                            <ComboBox>
                                                <ComboBoxItem Content="Alias 1"/>
                                                <ComboBoxItem Content="Alias 2"/>
                                                <ComboBoxItem Content="Alias 3"/>
                                            </ComboBox>
                                            <ComboBox ItemsSource="{Binding Comparisons}"/>
                                            <ComboBox>
                                                <ComboBoxItem Content="Alias 4"/>
                                                <ComboBoxItem Content="Alias 5"/>
                                                <ComboBoxItem Content="Alias 6"/>
                                            </ComboBox>
                                            <TextBox Text="Alias"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.Resources>
                            </ItemsControl>
                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding Condition.CommandAddGroup}" Margin="0,0,5,0">
                                    <Image Source="..\Images\add_green.png" Width="16" Height="16"/>
                                </Button>
                                <TextBlock Text="Condition groups:"/>
                            </StackPanel>
                            <ItemsControl HorizontalContentAlignment="Stretch" ItemsSource="{Binding Condition.Groups}">
                                <ItemsControl.Resources>
                                    <DataTemplate DataType="{x:Type vm_condition:VMconditionGroup}">
                                        <StackPanel Orientation="Horizontal">
                                            <Button Command="{Binding CommandRemove}" CommandParameter="{Binding}"  Margin="0,0,5,0">
                                                <Image Source="..\Images\cross_red.png" Width="16" Height="16"/>
                                            </Button>


                                            <ItemsControl HorizontalContentAlignment="Stretch" ItemsSource="{Binding ConditionSet}">
                                                <ItemsControl.Resources>

                                                    <DataTemplate DataType="{x:Type vm_condition:VMconditionBase}">
                                                        <TextBlock Text="Hello2"/>
                                                    </DataTemplate>

                                                    <DataTemplate DataType="{x:Type vm_block:VMvariable}">
                                                        <TextBlock Text="Hello"/>
                                                    </DataTemplate>

                                                </ItemsControl.Resources>
                                            </ItemsControl>
                                            <Button Command="{Binding CommandAdd}" Margin="0,0,5,0">
                                                <Image Source="..\Images\add_green.png" Width="16" Height="16"/>
                                            </Button>
                                            <CheckBox Content=":Inverse" FlowDirection="RightToLeft"/>
                                            <TextBox Text="Alias"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.Resources>
                            </ItemsControl>
                            <TextBlock Text="Full condition:" Margin="26,0,0,0"/>
                            <ItemsControl HorizontalContentAlignment="Stretch" ItemsSource="{Binding Vars}">
                                <ItemsControl.Resources>
                                    <DataTemplate DataType="{x:Type vm_block:VMvariable}">
                                        <StackPanel Orientation="Horizontal" Margin="26,0,0,0">
                                            <ComboBox>
                                                <ComboBoxItem Content="Alias 1"/>
                                                <ComboBoxItem Content="Alias 2"/>
                                                <ComboBoxItem Content="Alias 3"/>
                                            </ComboBox>
                                            <ComboBox>
                                                <ComboBoxItem Content="=="/>
                                                <ComboBoxItem Content=">"/>
                                                <ComboBoxItem Content=">="/>
                                            </ComboBox>
                                            <ComboBox>
                                                <ComboBoxItem Content="Alias 4"/>
                                                <ComboBoxItem Content="Alias 5"/>
                                                <ComboBoxItem Content="Alias 6"/>
                                            </ComboBox>
                                            <ComboBox>
                                                <ComboBoxItem Content="=="/>
                                                <ComboBoxItem Content=">"/>
                                                <ComboBoxItem Content=">="/>
                                            </ComboBox>
                                            <ComboBox>
                                                <ComboBoxItem Content="Alias 7"/>
                                                <ComboBoxItem Content="Alias 8"/>
                                                <ComboBoxItem Content="Alias 9"/>
                                            </ComboBox>
                                            <Button Command="{Binding CommandAdd}" Margin="0,0,5,0">
                                                <Image Source="..\Images\add_green.png" Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.Resources>
                            </ItemsControl>
                        </StackPanel>
                    </Expander>
                </Border>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm_blocks:VMinput}">
                <Border Style="{StaticResource MyBorder}">
                    <Expander Header="{Binding Name}" IsExpanded="True">
                        <StackPanel>
                            <ItemsControl HorizontalContentAlignment="Stretch"
                                          ItemsSource="{Binding Vars}">
                                <ItemsControl.Resources>
                                    <DataTemplate DataType="{x:Type vm_block:VMvariable}">
                                        <StackPanel Orientation="Horizontal" Margin="5,5,5,5">
                                            <Button Command="{Binding CommandRemove}" CommandParameter="{Binding}"  Margin="0,0,5,0">
                                                <Image Source="..\Images\cross_red.png" Width="16" Height="16"/>
                                            </Button>
                                            <TextBlock Margin="0,0,10,0" Text="Type:"/>
                                            <ComboBox Margin="0,0,10,0" Width="100" ItemsSource="{Binding Types}" SelectedItem="{Binding Type}" IsEditable="False"/>
                                            <TextBlock Margin="0,0,10,0" Text="Object:"/>
                                            <ComboBox Margin="0,0,10,0" Width="100" ItemsSource="{Binding ObjectNames}" IsEnabled="{Binding IsObject}" IsEditable="False"/>
                                            <CheckBox Margin="0,0,10,0" IsChecked="{Binding List}" Content=":List" FlowDirection="RightToLeft"/>
                                            <TextBlock Margin="0,0,10,0" Text="Alias:"/>
                                            <TextBox Margin="0,0,10,0" Width="100" Text="{Binding Alias}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.Resources>
                            </ItemsControl>
                            <Button Command="{Binding CommandAdd}" Margin="0,0,5,0">
                                <Image Source="..\Images\add_green.png" Width="16" Height="16"/>
                            </Button>
                        </StackPanel>
                    </Expander>
                </Border>
            </DataTemplate>
        </ListBox.Resources>
    </ListBox>
</UserControl>
