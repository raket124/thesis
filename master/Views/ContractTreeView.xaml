             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TreeView ItemsSource="{Binding Contracts}">
        <TreeView.Resources>
            <HierarchicalDataTemplate DataType="{x:Type vms:VMcontract}" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Name}" />
                    <TextBlock Text=" [" />
                    <TextBlock Text="{Binding Functions.Count}" Foreground="Green" />
                    <TextBlock Text="-" Foreground="Blue" />
                    <TextBlock Text="{Binding Functions.Count}" Foreground="Orange" />
                    <TextBlock Text="-" Foreground="Blue" />
                    <TextBlock Text="{Binding Functions.Count}" Foreground="Red" />
                    <TextBlock Text="]" />
                </StackPanel>
            </HierarchicalDataTemplate>
        </TreeView.Resources>

