<UserControl x:Class="master.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:master.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Menu>
        <MenuItem Header="File">
            <MenuItem Header="New" Command="{Binding FileNew}"/>
            <MenuItem Header="Demo" Command="{Binding FileDemo}"/>
            <Separator />
            <MenuItem Header="Open" Command="{Binding FileOpen}"/>
            <MenuItem Header="Save" Command="{Binding FileSave}" />
            <MenuItem Header="Save as" Command="{Binding FileSaveAs}"/>
            <Separator />
            <MenuItem Header="Exit" Command="{Binding FileExit}"/>
        </MenuItem>
        <MenuItem Header="Data model" Command="{Binding CodeWindow}"/>
        <MenuItem Header="Chain code" Command="{Binding GraphWindow}"/>
        <MenuItem Header="Test window" Command="{Binding TestWindow}"/>
    </Menu>

</UserControl>